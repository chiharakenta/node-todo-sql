<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todoリスト</title>
</head>
<body>
    <h1>Todoリスト</h1>
    <form action="/create" method="post">
        <input type="text" name="todoContent">
        <select name="categoryId">
            <% categories.map((category) => { %>
                <option value="<%= category.id %>"><%= category.name %> </option>
            <% }) %>
        </select>
        <input type="submit" value="作成">
    </form>
    <a href="/categories">カテゴリーの管理</a>
    <h2>やること</h2>
    <ul>
        <% categories.map((category) => { %>
            <li><%= category.name %></li>
            <ul>
                <% if (category.todos != null) { %>
                    <% let todos = category.todos.split(','); %>
                    <% todos.map((todo) => { %>
                        <li><%= todo %></li>
                    <% }) %>
                <% } %> 
            </ul>
        <% }) %> 
    </ul>
</body>
</html>